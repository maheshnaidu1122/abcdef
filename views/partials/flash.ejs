<% if (success && success.length) { %>
    <% 
      // Check if success is an array
      if (Array.isArray(success)) {
        success.forEach(function(message) { 
    %>
          <div class="alert alert-success">
            <%= message %>
          </div>
    <% 
        }); 
      } else { 
    %>
          <div class="alert alert-success">
            <%= success %>
          </div>
    <% 
      }
    %>
  <% } %>
  